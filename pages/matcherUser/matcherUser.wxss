/* pages/user/user.wxss */
@import '/common/common.wxss';
page {
  background: #f8f8f8!important;
  height: 100vh;
  width: 100vw;
  overflow-y: auto;
  position: relative;
}
.zte-searchBar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.list-body {
  width: 100%;
  padding-top: 88rpx;
}
.loadingWord {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  padding: 20rpx 0;
  background: #f8f8f8;
}
.list {
  background: #fff;
  padding: 0 30rpx;
  display: flex;
}
.info-icon {
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 34rpx;
  color: #3586ff;
  background: #f1f2f6;
  margin-right: 15rpx;
  margin: auto 0;
}
.content {
  flex:  1 1 auto;
  display: flex;
  height: 100rpx;
  justify-content: space-between;
  padding-left: 20rpx;
}
.name {
  line-height: 100rpx;
  max-width: 480rpx;
}
.user-type {
  line-height: 100rpx;
}
.del-btn {
  height: 45rpx;
  line-height: 45rpx;
  border-radius: 30rpx;
  border: 1px solid rgba(0,129,255,1);
  font-size: 28rpx;
  color: #0081FF;
  padding: 0 20rpx;
  margin: auto 0;
}
.update-btn {
  margin: auto 0;
  padding-right: 20rpx;
  color: #0081FF;
}