.release {
  height: 100vh;
  overflow: hidden;
  background: #f8f8f8;
}
.tab-box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding-right: 30rpx;
}
.messag-tabs {
  width: calc(100vw - 200rpx)!important;
}
.oprate-box {
  display: flex;
}
.oprate-box text {
  line-height: 86rpx;
  font-size: 28rpx;
}
.release-icon {
  width: 45rpx;
  height: 45rpx;
  margin: auto 0;
  margin-right: 5rpx;
}
.no_data_box {
  margin: auto;
  margin-top: 50%;
}
.no_data_pic {
  margin: auto;
  width: 168rpx;
  height: 168rpx;
  display: block;
}
.tips {
  color: #BECCDE;
  font-size: 28rpx;
  margin-top: 20rpx;
  text-align: center;
}
.message-small-list {
  height: calc(100% - 88rpx - 86rpx);
  overflow-y: auto;
  background: #fff;
}

.dialog {
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .3);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
}
.release-type-box {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 350rpx;
  background: #fff;
  box-shadow: 0px -2px 7px 0px rgba(0,0,0,0.07);
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #eee;
}
.type-box {
  width: 104rpx;
  height: 150rpx;
  margin: auto 0;
}
.type-icon {
  width: 104rpx;
  height: 104rpx;
}
.type-box text {
  font-size: 26rpx;
  color: rgba(102,102,102,1);
 }