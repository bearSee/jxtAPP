.comon-page {
  position: relative;
  width: 100%;
  min-height: 100%;
}
.head-box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1;
}
.tab-box, .search-box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  background: #fff;
}
.search-box {
  background: #f8f8f8;
}
.zte-searchBar, .message-tabs {
  flex: 1 1 auto!important;
}
.message-box {
  display: flex;
  padding-right: 20rpx;
}
.message-icon {
  font-size: 50rpx;
  position: relative;
  color: #999999;
  margin: auto;
}
.icon-dot {
  position: absolute;
  right: 5rpx;
  top: 5rpx;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: #F7563A;
}
.oprate-box {
  display: flex;
  padding-right: 30rpx;
}
.oprate-box text {
  line-height: 86rpx;
  font-size: 28rpx;
}
.release-icon {
  width: 45rpx;
  height: 45rpx;
  margin: auto 0;
  margin-right: 5rpx;
}
.no_data_box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.no_data_pic {
  margin: auto;
  width: 168rpx;
  height: 168rpx;
  display: block;
}
.tips {
  color: #BECCDE;
  font-size: 28rpx;
  margin-top: 20rpx;
  text-align: center;
}
.message-small-list {
  padding-top: 185rpx;
  background: #fff;
}
#list {
  border-bottom: 1rpx solid #eee;
}
.list-content {
  background: #fff;
  width: 100%;
}
.loadingWord {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  padding: 20rpx 0;
  background: #f8f8f8;
}
.dialog {
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .3);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
  transition: 0.5s;
}
.release-type-box {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 350rpx;
  background: #fff;
  box-shadow: 0px -2px 7px 0px rgba(0,0,0,0.07);
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #eee;
}
.type-box {
  width: 104rpx;
  height: 150rpx;
  margin: auto 0;
}
.type-icon {
  width: 104rpx;
  height: 104rpx;
}
.type-box text {
  font-size: 26rpx;
  color: rgba(102,102,102,1);
 }
 .release-set {
   position: relative;
   top: -2rpx;
   margin-left: 5rpx;
 }