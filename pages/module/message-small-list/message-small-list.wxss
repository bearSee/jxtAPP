.list {
  display: flex;
  justify-content: space-between;
  width: calc(100vw - 30rpx);
  height: 205rpx;
  margin-left: 30rpx;
  overflow-x: hidden;
  background: #fff;
}
.movable-area {
  width: 100%;
  display: flex;
  height: 100%;
  overflow: hidden;
}
.movable-view {
  width: calc(100% + 120rpx);
  height: 100%;
}
.movable-view-content {
  width: calc(100% - 120rpx);
  height: 100%;
  display: flex;
  padding: 20rpx 0;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.content {
  width: calc(100% - 160rpx);
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.title {
  color: #2C2C2C;
  font-size: 28rpx;
  max-height: 80rpx;
  -webkit-line-clamp: 2;
  line-height: 1.2;
}
.des {
  color: #999;
  font-size: 20rpx;
  -webkit-line-clamp: 1;
  margin-top: 10rpx;
}

.oprate-box {
  width: 100%;
  box-sizing: border-box;
  padding-right: 20rpx;
  display: flex;
  height: 44rpx;
  color: #999999;
}
.oprate-box text {
  font-size: 28rpx;
  margin-left: 10rpx;
  position: relative;
  top: -5rpx;
}
.matcher-user {
  flex: 1 1 190rpx;
  font-size: 28rpx;
  justify-content: flex-end;
  color: #666;
  display: flex;
}
.matcher-user text {
  margin: auto 0;
}
.matcher-user .num {
  color: #4285F4;
}

.oprate-icon {
  margin-right: 20rpx;
  font-size: 36rpx;
  color: #999999;
}
.ri-shield-star-fill {
  opacity: 0.6;
}
.ri-heart-fill {
  color: #F7563A;
}
.message-pic {
  width: 160rpx;
  height: auto;
  margin: auto 0;
}

