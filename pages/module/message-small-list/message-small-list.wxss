.list {
  display: flex;
  justify-content: space-between;
  width: calc(100vw - 30rpx);
  height: 225rpx;
  margin-left: 30rpx;
  overflow-x: hidden;
  background: #fff;
}
.movable-area {
  width: 100%;
  display: flex;
  height: 100%;
  overflow: hidden;
}
.movable-view {
  width: calc(100% + 120rpx);
  height: 100%;
}
.movable-view-content {
  width: calc(100% - 120rpx);
  height: 100%;
  display: flex;
  padding: 30rpx 0;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.content {
  width: calc(100% - 160rpx);
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.des {
  color: #2C2C2C;
  font-size: 28rpx;
  max-height: 100rpx;
  -webkit-line-clamp: 3;
}
