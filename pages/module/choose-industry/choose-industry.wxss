
@import '/common/common.wxss';
.choose-industry {
  width: 100%;
  height: 100%;
  background: #f8f8f8;
}
.title {
  line-height: 80rpx;
  padding: 0 30rpx;
  width: 100%;
  color: #999999;
  font-size: 26rpx;
}
.add-btn {
  width: 100%;
  height: 81rpx;
  display: flex;
  line-height: 80rpx;
  font-size: 30rpx;
  padding: 0 30rpx;
  background: #fff;
  color: #0081FF;
}
.add-icon {
  font-size: 52rpx;
  position: relative;
  top: -3rpx;
  left: -5rpx;
}
.submit-btn {
  width: calc(100% - 60rpx);
  margin: 30rpx auto;
  text-align: center;
}