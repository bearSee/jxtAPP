@import '/common/common.wxss';
.container {
  padding: 36rpx 40rpx;
  background: #fff;
}
.register-box {
  font-size: 56rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(221, 221, 221, 1);
  line-height: 80rpx;
  display: flex;
  margin-bottom: 22rpx;
}

.lightFont {
  color: #222;
  position: relative;
}

.lightFont view {
  position: absolute;
  bottom: 5rpx;
  left: 0;
  width: 100%;
  height: 20rpx;
  background: #ffe873;
  border-radius: 12rpx;
  z-index: -1;
}

.form-item {
  display: flex;
  height: 119rpx;
}

.form-item .icon {
}

.form-item input {
  font-size: 30rpx;
  margin: auto 0;
  padding-left: 20rpx;
}

.vCode-btn {
  box-sizing: border-box;
  width: 170rpx;
  border-radius: 28rpx;
  text-align: center;
  margin: auto;
  font-size: 26rpx;
  line-height: 52rpx;
  background: linear-gradient(329deg,rgba(0,183,255,1) 0%,rgba(0,129,255,1) 100%);
  color: #fff;
}
.vCode-disabled {
  border: 1rpx solid rgba(203,203,203,1);
  color: #CBCBCB;
  background: #fff;
}
.flex-line {
  flex: 1 1 auto;
}
.blue-font {
  color: rgb(16, 118, 236);
}

