@import '/common/common.wxss';
page {
  position: relative;
}
.beforeLogin {
  padding: 50rpx 40rpx;
  box-sizing: border-box;
  font-size: 56rpx;
  overflow-y: auto;
  width: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
}
.helloTextEn {
  font-size: 30rpx;
  color: #888;
  margin-top: 24rpx;
}
.backImage {
  display: block;
  height: 480rpx;
  width: auto;
}
.login-btn {
  width: 100%;
  font-size: 32rpx;
  line-height: 120rpx;
  border-radius: 60rpx;
  color: #fff;
  padding: 0 62rpx;
}
.pwd-login {
  background:linear-gradient(329deg,rgba(0,183,255,1) 0%,rgba(0,129,255,1) 100%);
  box-shadow:0px 2px 5px 0px rgba(0,129,255,0.56);
}
.wx-login {
  background:linear-gradient(129deg,rgba(0,171,135,1) 0%,rgba(0,213,188,1) 100%);
  box-shadow:0px 2px 5px 0px rgba(0,171,135,0.47);
  margin-top: 32rpx;
}
.icon {
  font-size: 36rpx;
  color: #fff;
}
.not-login {
  color: #00A9FF;
  font-size: 26rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}