.release-form {
  height: 100vh;
  overflow-y: auto;
  background: #f8f8f8;
}
.submit-btn {
  width: calc(100% - 60rpx);
  margin: 50rpx auto;
  text-align: center;
}
.zte-item {
  display: block!important;
  margin-left: 0!important;
  padding-right:  0!important;
  line-height: 1!important;
}
.zte-item .label{
  width: 100%!important;
  display: block!important;
  padding: 0 30rpx!important;
  background: #f8f8f8;
  color: #999;
  line-height: 80rpx;
}
.zte-item .value{
  width: 100%!important;
  padding: 0 30rpx!important;
  display: flex;
}
.choose-industry {
  height: auto!important;
  overflow: hidden!important;
}
.tag-skip {
  width: 100%;
  font-size: 30rpx;
  background: #f8f8f8;
}
.tag-label {
  width: 100%;
  padding: 0 30rpx;
  line-height: 80rpx;
  background: #f8f8f8;
  color: #999;
}
.tag-value {
  width: 100%;
  padding: 0 30rpx;
  line-height: 80rpx;
  color: #333;
  background: #fff;
}
.tag-value:before {
  right: 30rpx;
}


/* 弹窗 */

.dialog {
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .3);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 5;
  transition: 0.5s;
}
.dialog-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  box-shadow: 0px -2px 7px 0px rgba(0,0,0,0.07);
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #eee;
}
.content-box {
  width: 100%;
}