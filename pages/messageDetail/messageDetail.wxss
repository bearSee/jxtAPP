
@import '/common/common.wxss';
/* @import '/common/editor.css'; */

.message-detail {
  height: 100vh;
  width: 100vw;
  background: #f8f8f8;
  display: flex;
  flex-direction: column;
}
.content {
  margin: 0 30rpx;
  padding-bottom: 80rpx;
  width: calc(100% - 60rpx);
  flex: 1 1 auto;
  overflow: auto;
}
.detail-head {
  padding: 30rpx;
  padding-bottom: 15rpx;
  margin-bottom: 15rpx;
}
.content-body {
  border-top: 2rpx solid #E5E5E5;
  font-size: 30rpx;
  color:#666666;
  line-height: 42rpx;
  padding-top: 20rpx;
  margin-top: 20rpx;
}
.title {
  font-size: 40rpx;
  color:#2C2C2C;
  line-height: 46rpx;
  margin-bottom: 20rpx;
}
.date {
  display: flex;
}
.date text,.reviceIndustryName {
  margin-right: 20rpx;
  color: #929292;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.oprate-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background:#F6F6F6;
  box-shadow: 0px -1px 0px 0px rgba(169,169,169,0.5);
  display: flex;
  justify-content: flex-end;
}
.oprate-icon {
  margin: auto 0;
  margin-right: 30rpx;
  font-size: 42rpx;
  color: #999999;
}
.ri-shield-star-fill {
  opacity: 0.6;
}
.ri-heart-fill {
  color: #F7563A;
}