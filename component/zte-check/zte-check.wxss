.zte-check {
  width: 100%;
  margin: 14rpx 0;
}
.checkbox-group {
  display: flex;
  flex-wrap: wrap;
}
.zte-check .check-item .check-option {
  padding: 15rpx 0;
  display: flex;
  padding-right: 20rpx;
  position: relative;
}
.zte-check .check-item .check-option label {
  max-width: 350rpx;
}
.checkbox-group:last-child {
  border: 0;
}
.zte-check .check-item .check-option .icon-checked, .no-checked {
  margin: auto 10rpx;
  position: relative;
  top: 2rpx;
}
.no-checked {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1rpx solid #888;
}