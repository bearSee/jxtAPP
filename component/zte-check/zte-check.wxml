<!-- 单选、多选框 -->
<view class="zte-check">
  <checkbox-group bindchange="handlerChange">
    <label class="check-item" wx:for="{{ checkOptions }}" wx:for-item="option" wx:key="{{ index }}">
      <checkbox
        hidden
        value="{{ option[optionProp.value] }}"
        checked="{{ option.checked }}"
        disabled="{{ disabled }}"
      />
      <view class="check-option {{ checkOptions.length -1 === index ? '' : 'border_bottom' }}">
        <slot wx:if="{{ option.slot }}"></slot>
        <label wx:else>{{ option[optionProp.label] }}</label>
        <icon
          wx:if="{{ option.checked }}"
          color="#4285F4"
          class="icon-checked"
          type="success"
          size="20"
        >
        </icon>
      </view>
    </label>
  </checkbox-group>
</view>