@import '/common/common.wxss';
.weui-search-bar {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #f8f8f8;
  padding: 8px 10px;
}
.weui-icon-search {
  margin-right: 8px;
  font-size: inherit;
  top: 3px;
  position: relative;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}

.weui-search-bar__input {
  height: 28px;
  font-size: 28rpx;
}

.weui-search-bar__text {
  display: inline-block;
  line-height: 28px;
  font-size: 28rpx;
  vertical-align: middle;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #fff;
  /* border: 1rpx solid #e6e6ea; */
}

.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}


.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}

.weui-search-bar__label {
  position: absolute;
  /* top: 0; */
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9b9b9b;
  background: #fff;
  line-height: 28px;
  overflow: hidden;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #4285F4;
  white-space: nowrap;
}

.searchbar-result {
  margin-top: 0;
  font-size: 14px;
  /* height: calc(100vh - 88rpx); */
  /* overflow: scroll; */
  background: #fff;
}

.searchbar-result:before {
  display: none;
}

.weui-cell {
  padding: 12px 15px 12px 35px;
}

.weui-search-bar__text {
  /* line-height: 45rpx; */
  height: 100%;
}

.list-item {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  padding: 22rpx 25rpx 18rpx 25rpx;
  width: 700rpx;
}

.employeeName {
  width: 300rpx;
}

.count {
  width: 100rpx;
}

.amount {
  width: 300rpx;
  text-align: right;
}

.remind-btn {
  display: flex;
  line-height: 40rpx;
}

.count_bclock_icon {
  width: 35rpx;
  height: 35rpx;
  margin: 3rpx 10rpx 0 0;
}

.remindAll {
  width: 380rpx;
  color: #fff;
  position: absolute;
  bottom: 0rpx;
  left: 50%;
  transform: translate(-50%, -50%);
  line-height: 80rpx;
}

.count_wwarn_icon {
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx 0 100rpx;
  position: relative;
  top: 10rpx;
}

.count_sb_pic {
  height: 80rpx;
  width: 380rpx;
  position: absolute;
  z-index: -1;
  border-radius: 40rpx;
}

.noInfo {
  width: 100%;
  text-align: center;
  position: relative;
}

.noInfo image {
  width: 138rpx;
  height: 179rpx;
  position: absolute;
  top: 50%;
}